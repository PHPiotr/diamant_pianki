{% extends 'layout.html.twig' %}

{% block title %}{{parent()}}Kontakt{% endblock %}
{% block description %}{{ parent() }}{% trans %}contact_description{% endtrans %} Telefon: {{ phone }}{% endblock %}
{% block keywords %}{{ parent() }}{% trans %}contact_keywords{% endtrans %}{% endblock %}

{% block body %}
<section class="page-section" id="contact" style="background-image: url({{ asset('img/bg-diamant-kontakt.png') }});">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">{% trans %}contact_description{% endtrans %}</h2>
                <h3 class="section-subheading text-white">Telefon: {{ phone }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ form_start(form, {'attr': {'action': path('kontakt'), 'novalidate': 'novalidate'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'email'|trans }}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'phone'|trans }}) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'message'|trans }}) }}
                            {{ form_errors(form.message) }}
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 text-center">
                        {% for message in app.flashes('success') %}
                            <div class="text-warning">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-xl text-uppercase' }}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
