{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }}{% trans %}uvod_title{% endtrans %}{% endblock %}
{% block description %}{{ parent() }}{% trans %}uvod_description{% endtrans %}{% endblock %}
{% block keywords %}{{ parent() }}{% trans %}uvod_keywords{% endtrans %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-section {
            padding: 95px 0 100px 0;
        }
    </style>
{%  endblock %}

{% block body %}
    <header class="masthead" style="background-image: url({{ asset('img/bg-diamant-uvod.jpg') }});">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 text-center">
                    <div class="intro-text">
                        <div class="intro-lead-in">{% trans %}uvod_intro_1{% endtrans %}</div>
                        <div class="text-danger intro-heading text-uppercase">{% trans %}uvod_intro_2{% endtrans %}</div>
                        <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#services">
                            {% trans %}uvod_more_info{% endtrans %}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Services -->
    <section class="page-section bg-light" id="services" style="background-image: url({{ asset('img/bg-diamant-uvod-vice-informaci.jpg') }});">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Diamant</h2>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-warning">
                    <h4 class="text-white my-0 font-weight-normal">{% trans %}uvod_text_1{% endtrans %}</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title"><span class="text-danger">{% trans %}uvod_price{% endtrans %}</span> <small class="text-muted">/ 20cm /
                            m<sup>2</sup></small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-check-circle fa-stack-1x text-success"></i>
                            </span>
                            {% trans %}uvod_text_2{% endtrans %}
                        </li>
                        <li>
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-check-circle fa-stack-1x text-success"></i>
                            </span>
                            {% trans %}uvod_text_3{% endtrans %}
                        </li>
                        <li>
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-check-circle fa-stack-1x text-success"></i>
                            </span>
                            {% trans %}uvod_text_4{% endtrans %}
                        </li>
                        <li>
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-check-circle fa-stack-1x text-success"></i>
                            </span>
                            {% trans %}uvod_text_5{% endtrans %}
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/diamant.js') }}"></script>
{% endblock %}