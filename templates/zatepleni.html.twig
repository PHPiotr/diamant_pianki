<!-- Portfolio Grid -->
<section class="bg-light page-section" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">{% trans %}house_insulation{% endtrans %}</h2>
                <h3 class="section-subheading text-muted">{% trans %}house_insulation_heading{% endtrans %}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a class="portfolio-link" href="{{ path('zatepleniDomuPodkrovi') }}" title="{% trans %}house_insulation_attic_title{% endtrans %}">
                    <div class="portfolio-hover warning">
                        <div class="portfolio-hover-content">
                            <i class="fas fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img class="img-fluid" src="{{ asset('img/zatepleni-podkrovi-thumbnail.jpg') }}" alt="{% trans %}house_insulation_attic_alt{% endtrans %}">
                </a>
                <div class="portfolio-caption">
                    <h4 class="text-warning">{% trans %}house_insulation_attic_heading{% endtrans %}</h4>
                    <p class="text-muted">{% trans %}house_insulation_attic_subheading{% endtrans %}</p>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a class="portfolio-link" href="{{ path('zatepleniDomuSteny') }}" title="{% trans %}house_insulation_walls_title{% endtrans %}">
                    <div class="portfolio-hover danger">
                        <div class="portfolio-hover-content">
                            <i class="fas fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img class="img-fluid" src="{{ asset('img/zatepleni-steny-a-stropu-thumbnail.jpg') }}" alt="{% trans %}house_insulation_walls_alt{% endtrans %}">
                </a>
                <div class="portfolio-caption">
                    <h4 class="text-danger">{% trans %}house_insulation_walls_heading{% endtrans %}</h4>
                    <p class="text-muted">{% trans %}house_insulation_walls_subheading{% endtrans %}</p>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a class="portfolio-link" href="{{ path('zatepleniDomuStrechy') }}" title="{% trans %}house_insulation_roof_title{% endtrans %}">
                    <div class="portfolio-hover success">
                        <div class="portfolio-hover-content">
                            <i class="fas fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img class="img-fluid" src="{{ asset('img/izolace-strechy-thumbnail.jpg') }}" alt="{% trans %}house_insulation_roof_alt{% endtrans %}">
                </a>
                <div class="portfolio-caption">
                    <h4 class="text-success">{% trans %}house_insulation_roof_heading{% endtrans %}</h4>
                    <p class="text-muted">{% trans %}house_insulation_roof_subheading{% endtrans %}</p>
                </div>
            </div>
        </div>
    </div>
</section>
