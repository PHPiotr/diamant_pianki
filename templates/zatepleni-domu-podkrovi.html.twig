{% extends 'layout.html.twig' %}

{% block title %}{{parent()}}{% trans %}house_insulation_attic_alt{% endtrans %}{% endblock %}
{% block description %}{{ parent() }}{% trans %}house_insulation_attic_description{% endtrans %}{% endblock %}
{% block keywords %}{{ parent() }}{% trans %}house_insulation_attic_keywords{% endtrans %}{% endblock %}

{% block body %}
    {{ include('zatepleni.html.twig') }}
    <div class="portfolio-modal modal fade in" id="podkroviModal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <a href="{{ path('zatepleniDomu') }}" title="{% trans %}house_insulation{% endtrans %}">
                    <div class="close-modal">
                        <div class="lr">
                            <div class="rl"></div>
                        </div>
                    </div>
                </a>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="modal-body">
                                <h2 class="text-warning text-uppercase">{% trans %}house_insulation_attic_alt{% endtrans %}</h2>
                                <p class="item-intro text-muted">{% trans %}house_insulation_attic_text_1{% endtrans %}</p>
                                <img class="img-fluid d-block mx-auto" src="{{ asset('img/zatepleni-podkrovi-full.jpg') }}"
                                     alt="{% trans %}house_insulation_attic_alt{% endtrans %}" title="{% trans %}house_insulation_attic_text_1{% endtrans %}">
                                <p>{% trans %}house_insulation_attic_text_2{% endtrans %}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $('#podkroviModal').modal('show');
    </script>
{% endblock %}
